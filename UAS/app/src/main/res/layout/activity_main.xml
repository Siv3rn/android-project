<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aplikasi Ngadu"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:layout_marginTop="25dp"
        android:id="@+id/header"
        />
    <EditText
        android:layout_marginTop="30dp"
        android:layout_marginStart="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:hint="Username"
        android:id="@+id/Log_username"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        />

    <EditText
        android:layout_marginTop="30dp"
        android:layout_marginStart="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Log_username"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:id="@+id/Log_password"
        />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Log_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Log-In"
        android:textSize="25dp"
        android:layout_marginHorizontal="30dp"
        android:background="@color/purple_200"
        android:textColor="@color/white"
        android:id="@+id/Log_button"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:layout_below="@id/Log_button"
        android:layout_marginTop="30dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="40dp"
        android:id="@+id/Log_reg"
        />


    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/Log_prog"

        tools:ignore="MissingConstraint"
        android:layout_centerInParent="true"

        />

</RelativeLayout>