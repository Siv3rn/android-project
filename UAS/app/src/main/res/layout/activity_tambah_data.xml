<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TambahData">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buat Laporan Baru"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/Tam_banner"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="30dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Judul"
        android:id="@+id/Tam_judul"
        android:layout_marginTop="10dp"
        android:layout_below="@id/Tam_banner"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Isi Laporan"
        android:id="@+id/Tam_isi"
        android:layout_below="@+id/Tam_judul"
        android:layout_marginTop="10dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tanggal Kejadian"
        android:id="@+id/Tam_tanggal"
        android:layout_below="@+id/Tam_isi"
        android:layout_marginTop="10dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Lokasi Kejadian"
        android:id="@+id/Tam_lokasi"
        android:layout_below="@+id/Tam_tanggal"
        android:layout_marginTop="10dp"
        />

    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Submit Laporan"
        android:background="#49ba3a"
        android:layout_below="@id/Tam_lokasi"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:id="@+id/Tam_button"
        />

</RelativeLayout>